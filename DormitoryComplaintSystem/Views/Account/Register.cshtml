@model DormitoryComplaintSystem.ViewModels.RegisterViewModel

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card mt-5 shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Student Registration Form</h4>
            </div>
            <div class="card-body">
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label class="form-label">Name Surname</label>
                        <input asp-for="FullName" class="form-control" placeholder="Name Surname" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email Address</label>
                        <input asp-for="Email" class="form-control" placeholder="examplestudent@gmail.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Room Number</label>
                            <input asp-for="RoomNumber" class="form-control" />
                            <span asp-validation-for="RoomNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                        <label class="form-label">Bed Number</label>
                        <input asp-for="BedNumber" class="form-control" placeholder="A, B, 1, 2..." />
                        <span asp-validation-for="BedNumber" class="text-danger"></span>
    </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-success w-100">Sign up</button>
                </form>
            </div>
        </div>
    </div>
</div>