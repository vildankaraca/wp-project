@model List<DormitoryComplaintSystem.Models.Complaint>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>My Complaints</h2>
        <a asp-action="Create" class="btn btn-primary">+ Create a New Complaint</a>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            You have not created any complaints yet.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Subject</th>
                        <th>Description</th>
                        <th>Date</th>
                        <th>Situation</th>
                        <th>Process</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                            @if (item.EditedAt.HasValue)
                            {
                                 <br />
                                 <span class="text-muted" style="font-size: 0.85em; font-style: italic;">
                                  (Edited: @item.EditedAt.Value.ToString("dd.MM.yyyy HH:mm"))
                                </span>
                            }</td>
                            <td>
                                @if (item.IsResolved)
                                {
                                    <span class="badge bg-success">Resolved</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Under review...</span>
                                }
                            </td>
                            <td>
                                @if (!item.IsResolved)
                                {
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to withdraw this complaint?');">
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>

                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" onclick="return confirm('Are you sure you want to edit this complaint?');">Edit</a>
                                }
                                else
                                {
                                    <span class="text-muted text-small">Process Closed</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>