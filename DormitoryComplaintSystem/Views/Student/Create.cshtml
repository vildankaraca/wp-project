@model DormitoryComplaintSystem.Models.Complaint

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card mt-4 shadow">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">New Complaint Report</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">Complaint Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Ex: Hot water is not coming out" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Detailed Explanation</label>
                        <textarea asp-for="Description" class="form-control" rows="5" placeholder="Please describe the issue in detail..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success">Submit Complaint</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>