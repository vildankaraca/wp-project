@model List<DormitoryComplaintSystem.Models.Menu>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Menu (Next 14 Days)</h2>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success">+ Add Menu</a>
        }
    </div>

    <table class="table table-bordered table-striped">
        <thead class="bg-warning text-dark">
            <tr>
                <th>Date</th>
                <th>Soup</th>
                <th>Main Dish</th>
                <th>Side Dish</th>
                <th>Desert / Fruit</th>
                @if (User.IsInRole("Admin"))
                {
                    <th style="width: 180px;">Admin Actions</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                bool isCustom = item.Id != 0;

                <tr class="@(isCustom ? "table-info" : "")">
                    <td class="fw-bold">
                        @item.Date.ToString("dd.MM.yyyy - dddd")
                        @if (isCustom)
                        {
                            <span class="badge bg-primary ms-1">Custom</span>
                        }
                    </td>
                    <td>@item.Soup</td>
                    <td>@item.MainDish</td>
                    <td>@item.SideDish</td>
                    <td>@item.Dessert</td>
                    
                    @if (User.IsInRole("Admin"))
                    {
                        <td class="text-center">
                            @if (isCustom)
                            {
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" >
                                    <button type="submit" class="btn btn-sm btn-outline-danger w-100"
                                    onclick ="return confirm('Are you sure you want to undo the change you made and revert to the default menu for today?');">
                                        Delete Changes
                                    </button>
                                </form>
                            }
                            else
                            {
                                <a asp-action="Create" asp-route-date="@item.Date.ToString("yyyy-MM-dd")" class="btn btn-sm btn-primary w-100">
                                    Edit
                                </a>
                            }
                        </td>
                    }
                </tr>
            }
        </tbody>
   Â </table>
</div>