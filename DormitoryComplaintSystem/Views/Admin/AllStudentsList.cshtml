@model IEnumerable<DormitoryComplaintSystem.Models.ApplicationUser>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>ğŸ“‚ All Registered Students</h2>
        <a asp-action="DormManagementPanel" class="btn btn-outline-secondary">â† Return to the Complaints Panel</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="bg-dark text-white">
                    <tr>
                        <th>Name Surname</th>
                        <th>Email</th>
                        <th>Room Number</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td class="fw-bold">@student.FullName</td>
                            <td>@student.Email</td>
                            <td>
                                <span class="badge bg-info text-dark">@student.RoomNumber</span>
                            </td>
                            <td>
                                <a asp-action="StudentDetails" asp-route-id="@student.Id" class="btn btn-sm btn-primary">
                                    ğŸ” See Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>